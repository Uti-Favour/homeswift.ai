{
  "version": 2,
  "name": "chat-homeswift-ai",
  "public": true,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/landing"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "npm run build:landing",
  "installCommand": "npm install",
  "framework": "vite",
  "regions": ["lhr1"],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
