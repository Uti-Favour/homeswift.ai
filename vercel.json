{
  "version": 2,
  "builds": [
    {
      "src": "vercel-build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "vercel-build-chat.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/chat",
        "buildCommand": "npm run build:chat"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "has": [
        { "type": "host", "value": "api.homeswift.co" }
      ],
      "destination": "/server/server.js"
    },
    {
      "source": "/(.*)",
      "has": [
        { "type": "host", "value": "chat.homeswift.co" }
      ],
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "has": [
        { "type": "host", "value": "homeswift.co" },
        { "type": "host", "value": "www.homeswift.co" }
      ],
      "destination": "/index.html"
    },
    { 
      "source": "/(.*)",
      "destination": "/index.html" 
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        { "type": "host", "value": "www.homeswift.co" }
      ],
      "destination": "https://homeswift.co/:path*",
      "permanent": true
    }
  ],
  "cleanUrls": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://vercel.live https://vercel.live/_next-live/ https://homeswift.co; script-src-elem 'self' 'unsafe-inline' https://homeswift.co https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://homeswift.co; style-src-elem 'self' 'unsafe-inline' https://fonts.googleapis.com https://homeswift.co; img-src 'self' data: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://*.supabase.co https://homeswift.co https://homeswift-ai.vercel.app; frame-src 'self' https://vercel.live;"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://homeswift.co, https://chat.homeswift.co"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS, PATCH, DELETE, POST, PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        }
      ]
    }
  ]
}